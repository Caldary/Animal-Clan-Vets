<h1>Animals</h1>
<p><li><a href="/animals/new">Register New Animal</a></li></p>

<% for animal in @animals %>
    <p>Name: <%= animal.name %></p>
    <p>Dob: <%= animal.date_of_birth %></p>
    <p>Type: <%= animal.type %></p>
    <p>Owner: <%= animal.owner_name %></p>
    <p>Notes: <%= animal.notes %></p>
    <p>Vet: <%= animal.vet_id %></p>
    <form action="/animals/<%= animal.id %>/delete" method="POST">
        <input class="btn btn--danger" type="submit" value="delete" />
    </form>
    <hr/>
<% end %>